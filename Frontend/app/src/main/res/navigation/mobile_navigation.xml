<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pantrypal.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.pantrypal.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <activity
        android:id="@+id/navigation_create_recipe"
        android:name="com.example.pantrypal.CreateRecipeActivity"
        android:label="@string/title_create_recipe"
        tools:layout="@layout/activity_create_recipe" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.pantrypal.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <activity
        android:id="@+id/navigation_stores"
        android:name="com.example.pantrypal.StoreLocatorActivity"
        android:label="@string/title_store_locator"
        tools:layout="@layout/activity_store_locator" />
</navigation>